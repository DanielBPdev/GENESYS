<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.asopagos.coreaas.services</groupId>
		<artifactId>entidad-descuento-composite</artifactId>
		<version>0.0.2-SNAPSHOT</version>
	</parent>
		
	<artifactId>entidad-descuento-composite-service</artifactId>	
	<packaging>war</packaging>
	<name>Servicio de Entidad de Descuento</name>
	<description>Aplicación Web que implementa los servicios de composición para Entidad de Descuento</description>

	<properties>
		<fabric8.skip>false</fabric8.skip>
	</properties>

	<dependencies>		
		<dependency>
			<groupId>com.asopagos.coreaas.services</groupId>
			<artifactId>entidad-descuento-composite-api</artifactId>
			<version>${project.version}</version>
		</dependency>	
		<dependency>
			<groupId>com.asopagos.coreaas.services</groupId>
			<artifactId>empresas-api</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.asopagos.coreaas.services</groupId>
			<artifactId>entidad-descuento-api</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.asopagos.coreaas.services</groupId>
			<artifactId>archivos-api</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.asopagos.coreaas.services</groupId>
			<artifactId>consola-estado-cargue-procesos-api</artifactId>
			<version>${project.version}</version>
		</dependency>		
	</dependencies>

    <build>
        <!-- Maven will append the version to the finalName (which is the name 
        given to the generated war, and hence the context root) -->
        <finalName>EntidadDescuentoCompositeService</finalName>
        <plugins>
           <plugin>
				<groupId>org.wildfly.plugins</groupId>
				<artifactId>wildfly-maven-plugin</artifactId>
				<configuration>
					<skip>false</skip>
				</configuration>
			</plugin>
        </plugins>
    </build>
    
   	<profiles>
	</profiles>
    
</project>
