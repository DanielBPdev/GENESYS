		<class>com.asopagos.entidades.ccf.novedades.RegistroPersonaInconsistente</class>

		<exclude-unlisted-classes>true</exclude-unlisted-classes>

		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.SQLServer2012Dialect" />
			<property name="hibernate.hbm2ddl.auto" value="${persistencia}" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="false" />
			<property name="hibernate.cache.provider_class" value="org.hibernate.cache.HashtableCacheProvider" />
			<property name="hibernate.transaction.flush_before_completion"
				value="true" />
			<property name="hibernate.max_fetch_depth" value="3" />
			<property name="hibernate.default_batch_fetch_size" value="8" />
			<property name="hibernate.query.substitutions" value="true 1, false 0" />
			<property name="hibernate.order_inserts" value="true"/>
			<property name="hibernate.order_updates" value="true"/>
			<property name="hibernate.jdbc.batch_size" value="500"/>
			<property name="hibernate.connection.driver_class"
				value="com.microsoft.jdbc.sqlserver.SQLServerDriver" />

			<property name="hibernate.integration.envers.enabled" value="${audit.enabled}"/>
			<property name="hibernate.envers.autoRegisterListeners" value="${audit.enabled}"/>
			<property name="org.hibernate.envers.default_schema" value="${default.schema}"/>
			<property name="org.hibernate.envers.store_data_at_delete" value="true"/>
			<property name="org.hibernate.envers.default_catalog" value="${nombre.usuario}"/>
		</properties>

	</persistence-unit>

    <persistence-unit name="novedadesReportes_PU" transaction-type="JTA">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <jta-data-source>jboss/datasources/reportesDS</jta-data-source>
        <mapping-file>META-INF/jpql/NamedQueriesReportes.xml</mapping-file>
        <jar-file>lib/model-auditoria-entities-${project.version}.jar</jar-file>
        
        <exclude-unlisted-classes>true</exclude-unlisted-classes>

        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.SQLServer2012Dialect" />
            <property name="hibernate.hbm2ddl.auto" value="${persistencia}" />
            <property name="hibernate.show_sql" value="false" />
            <property name="hibernate.format_sql" value="false" />
            
            <property name="hibernate.cache.provider_class" value="org.hibernate.cache.HashtableCacheProvider" />
            <property name="hibernate.transaction.flush_before_completion"
                value="true" />
            <property name="hibernate.max_fetch_depth" value="3" />
            <property name="hibernate.default_batch_fetch_size" value="8" />
            <property name="hibernate.query.substitutions" value="true 1, false 0" />
            <property name="hibernate.order_inserts" value="true"/>
            <property name="hibernate.order_updates" value="true"/>
            <property name="hibernate.jdbc.batch_size" value="500"/>
            <property name="hibernate.connection.driver_class"
                value="com.microsoft.jdbc.sqlserver.SQLServerDriver" />
            <property name="hibernate.connection.autocommit" value="true"/>
            <!-- envers -->
            <property name="hibernate.integration.envers.enabled" value="false"/>
            <property name="hibernate.envers.autoRegisterListeners" value="${audit.enabled}"/>
            <property name="org.hibernate.envers.default_schema" value="dbo"/>
            <property name="org.hibernate.envers.store_data_at_delete" value="true"/>
            <property name="org.hibernate.envers.default_catalog" value="${nombre.usuario}"/>

        </properties>
    </persistence-unit>
	
	<persistence-unit name="pilaStaging_PU" transaction-type="JTA">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>jboss/datasources/pilaDS</jta-data-source>
		<mapping-file>META-INF/jpql/NamedQueriesStaging.xml</mapping-file>

		<class>com.asopagos.entidades.pila.staging.RegistroGeneral</class>
		<class>com.asopagos.entidades.pila.staging.RegistroDetallado</class>
		<class>com.asopagos.entidades.pila.staging.RegistroDetalladoNovedad</class>
		<class>com.asopagos.entidades.pila.staging.PlanillaCandidataReproceso</class>
		
		<exclude-unlisted-classes>true</exclude-unlisted-classes>

		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.SQLServer2012Dialect" />
			<property name="hibernate.default_catalog" value="${pila.database}" />
			<property name="hibernate.default_schema" value="staging" />
			<property name="hibernate.hbm2ddl.auto" value="${persistencia}" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="false" />
			<property name="hibernate.cache.provider_class" value="org.hibernate.cache.HashtableCacheProvider" />
			<property name="hibernate.transaction.flush_before_completion"
				value="true" />
			<property name="hibernate.max_fetch_depth" value="3" />
			<property name="hibernate.default_batch_fetch_size" value="8" />
			<property name="hibernate.query.substitutions" value="true 1, false 0" />
			<property name="hibernate.connection.driver_class"
				value="com.microsoft.jdbc.sqlserver.SQLServerDriver" />
			<property name="hibernate.connection.autocommit" value="true" />
			<!-- events -->
			<!--property name="hibernate.ejb.event.post-load" value="com.asopagos.audit.event.AuditQueryEventListener"/-->
			<!-- envers -->
			<property name="hibernate.integration.envers.enabled" value="false"/>
			<property name="hibernate.envers.autoRegisterListeners" value="false"/>
		</properties>

	</persistence-unit>

</persistence>
