		<class>com.asopagos.entidades.ccf.personas.Persona</class>
		<class>com.asopagos.entidades.ccf.core.Ubicacion</class>
		<class>com.asopagos.entidades.ccf.core.SucursalEmpresa</class>
		<class>com.asopagos.entidades.transversal.personas.ARL</class>
		<class>com.asopagos.entidades.transversal.core.CodigoCIIU</class>
		<class>com.asopagos.entidades.ccf.afiliaciones.CargueMultiple</class>
		<class>co.com.heinsohn.lion.fileprocessing.fileloader.ValidatorParamValue</class>
		<class>co.com.heinsohn.lion.fileprocessing.fileloader.ValidatorParameter</class>
		<class>co.com.heinsohn.lion.fileprocessing.fileloader.ValidatorDefinition</class>
		<class>co.com.heinsohn.lion.fileprocessing.fileloader.ValidatorCatalog</class>
		<class>co.com.heinsohn.lion.fileprocessing.fileloader.LineLoadCatalog</class>
		<class>co.com.heinsohn.lion.fileprocessing.fileloader.LineDefinitionLoad</class>
		<class>co.com.heinsohn.lion.fileprocessing.fileloader.FileLoadedLog</class>
		<class>co.com.heinsohn.lion.fileprocessing.fileloader.FileLoaded</class>
		<class>co.com.heinsohn.lion.fileprocessing.fileloader.FileDefinitionLoadType</class>
		<class>co.com.heinsohn.lion.fileprocessing.fileloader.FileDefinitionLoad</class>
		<class>co.com.heinsohn.lion.fileprocessing.fileloader.FieldLoadCatalog</class>
		<class>co.com.heinsohn.lion.fileprocessing.fileloader.FieldDefinitionLoad</class>
		<class>co.com.heinsohn.lion.fileCommon.FileLocationCommon</class>
