<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.asopagos.coreaas.services</groupId>
		<artifactId>cliente-anibol</artifactId>
		<version>0.0.2-SNAPSHOT</version>
	</parent>
	<artifactId>cliente-anibol-api</artifactId>
	<name>Anibol API</name>
	<description>En este modulo se alberga los componenetes transversales para el servicio y la definicion del mismo</description>

	<properties>
		<client.directory>com/asopagos/clienteanibol/clients</client.directory>
	</properties>

	<dependencies>
		<dependency>
			<groupId>com.asopagos.coreaas.commons</groupId>
			<artifactId>commons-service-locator</artifactId>
			<version>0.0.2-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.asopagos.coreaas.commons</groupId>
			<artifactId>commons-pila-dto</artifactId>
			<version>0.0.2-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-lang3</artifactId>
		</dependency>
		<dependency>
			<groupId>com.google.code.gson</groupId>
			<artifactId>gson</artifactId>
		</dependency>
		<dependency>
	      <groupId>junit</groupId>
	      <artifactId>junit</artifactId>
	      <scope>test</scope>
	    </dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<annotationProcessorPaths>
						<annotationProcessorPath>
							<groupId>com.asopagos.coreaas.utilities.services</groupId>
							<artifactId>services-processor</artifactId>
							<version>${project.version}</version>
						</annotationProcessorPath>
						<annotationProcessorPath>
							<groupId>javax</groupId>
							<artifactId>javaee-web-api</artifactId>
							<version>${javax.version}</version>
						</annotationProcessorPath>
					</annotationProcessorPaths>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>