		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>jboss/datasources/asopagosDS</jta-data-source>
		<mapping-file>META-INF/jpql/NamedQueries.xml</mapping-file>
		<mapping-file>META-INF/jpql/ActualizarMedioDePagoGrupoFamiliarRutineNamedQueries.xml</mapping-file>
		<jar-file>lib/model-auditoria-entities-${project.version}.jar</jar-file>
		
