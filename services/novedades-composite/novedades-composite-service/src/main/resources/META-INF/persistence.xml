<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="novedades_PU" transaction-type="JTA">

		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>jboss/datasources/asopagosDS</jta-data-source>
		<mapping-file>META-INF/jpql/NamedQueries.xml</mapping-file>
		
		<jar-file>lib/model-auditoria-entities-${project.version}.jar</jar-file>
		
		
		<!-- RUTINES -->
		<mapping-file>META-INF/jpql/GuardarExcepcionNovedadRutineNamedQueries.xml</mapping-file>	
		<mapping-file>META-INF/jpql/ActualizarRolAfiliadoRutineNamedQueries.xml</mapping-file>
		<mapping-file>META-INF/jpql/guardarDatosTemporalesPersonaRutineNamedQueries.xml</mapping-file>
		<mapping-file>META-INF/jpql/ConfirmarTransaccionNovedadPilaRutineNamedQueries.xml</mapping-file>
		<mapping-file>META-INF/jpql/ActualizarGrupoFamiliarPersonaRutineNamedQueries.xml</mapping-file>
		<mapping-file>META-INF/jpql/ActualizarMedioDePagoGrupoFamiliarRutineNamedQueries.xml</mapping-file>
		<mapping-file>META-INF/jpql/ActualizarBeneficiarioRutineNamedQueries.xml</mapping-file>
		<mapping-file>META-INF/jpql/CalcularCategoriasAfiliadoRutineNamedQueries.xml</mapping-file>
		<mapping-file>META-INF/jpql/ActualizarSolicitudNovedadPersonaRutineNamedQueries.xml</mapping-file>
		<mapping-file>META-INF/jpql/GuardarListaChequeoRutineNamedQueries.xml</mapping-file>
