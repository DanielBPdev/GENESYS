		<mapping-file>META-INF/jpql/ActualizarNovedadPilaRutineNamedQueries.xml</mapping-file>
		<mapping-file>META-INF/jpql/ActualizarEstadoSolicitudNovedadRutineNamedQueries.xml</mapping-file>
		

		<class>com.asopagos.entidades.ccf.core.Novedad</class>
		<class>com.asopagos.entidades.ccf.general.Solicitud</class>
		<class>com.asopagos.entidades.ccf.novedades.SolicitudNovedad</class>
		<class>com.asopagos.entidades.ccf.novedades.SolicitudNovedadEmpleador</class>
		<class>com.asopagos.entidades.ccf.novedades.SolicitudNovedadPersona</class>		
		<class>com.asopagos.entidades.ccf.novedades.IntentoNovedad</class>
		<class>com.asopagos.entidades.ccf.novedades.IntentoNovedadRequisito</class>				
		<class>com.asopagos.entidades.ccf.novedades.SolicitudNovedadPersona</class>		
		<class>com.asopagos.entidades.ccf.novedades.RegistroNovedadFutura</class>
		<class>com.asopagos.entidades.ccf.novedades.SolicitudNovedadPila</class>					
		<class>com.asopagos.entidades.ccf.afiliaciones.DatoTemporalSolicitud</class>	
		<class>com.asopagos.entidades.ccf.fovis.SolicitudAnalisisNovedadFovis</class>
		<class>com.asopagos.entidades.ccf.personas.Persona</class>	
		<class>com.asopagos.entidades.ccf.personas.PersonaDetalle</class>	
		<class>com.asopagos.entidades.transversal.core.Municipio</class>		
		<class>com.asopagos.entidades.ccf.core.Ubicacion</class>	
		<class>com.asopagos.entidades.ccf.personas.Beneficiario</class>	
		<class>com.asopagos.entidades.ccf.personas.Empleador</class>	
