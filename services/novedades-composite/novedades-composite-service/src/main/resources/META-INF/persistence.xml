		<class>com.asopagos.entidades.ccf.personas.Afiliado</class>
		<class>com.asopagos.entidades.ccf.personas.GrupoFamiliar</class>
		<class>com.asopagos.entidades.ccf.personas.Empresa</class>
		<class>com.asopagos.entidades.ccf.personas.EntidadPagadora</class>
		<class>com.asopagos.entidades.transversal.personas.AFP</class>
		<class>com.asopagos.entidades.ccf.core.SucursalEmpresa</class>
		<class>com.asopagos.entidades.transversal.personas.ARL</class>
		<class>com.asopagos.entidades.transversal.core.CodigoCIIU</class>
		<class>com.asopagos.entidades.ccf.personas.CertificadoEscolarBeneficiario</class>
		<class>com.asopagos.entidades.ccf.personas.Categoria</class>
		<class>com.asopagos.entidades.ccf.personas.BeneficiarioDetalle</class>
		<class>com.asopagos.entidades.ccf.personas.AdminSubsidioGrupo</class>
		<class>com.asopagos.entidades.ccf.afiliaciones.SolicitudAfiliacionPersona</class>
		<class>com.asopagos.entidades.ccf.afiliaciones.SolicitudAfiliacionEmpleador</class>		
		<class>com.asopagos.entidades.ccf.personas.CondicionInvalidez</class>
		<class>com.asopagos.entidades.ccf.personas.MedioDePago</class>	
		<class>com.asopagos.entidades.ccf.personas.MedioCheque</class>
		<class>com.asopagos.entidades.ccf.personas.MedioTransferencia</class>
		<class>com.asopagos.entidades.ccf.personas.MedioConsignacion</class>
		<class>com.asopagos.entidades.ccf.personas.MedioTarjeta</class>
		<class>com.asopagos.entidades.ccf.personas.MedioEfectivo</class>
		<class>com.asopagos.entidades.ccf.personas.NovedadDetalle</class>
		<class>com.asopagos.entidades.ccf.personas.AdministradorSubsidio</class>
		<class>com.asopagos.entidades.ccf.personas.MedioPagoPersona</class>
		<class>com.asopagos.entidades.ccf.afiliaciones.ItemChequeo</class>
		<class>com.asopagos.entidades.transversal.core.Requisito</class>	
		<class>com.asopagos.entidades.transversal.core.ControlCertificadosMasivos</class>
		

		<exclude-unlisted-classes>true</exclude-unlisted-classes>

		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.SQLServer2012Dialect" />
			<property name="hibernate.hbm2ddl.auto" value="${persistencia}" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="false" />
			<property name="hibernate.cache.provider_class" value="org.hibernate.cache.HashtableCacheProvider" />
			<property name="hibernate.transaction.flush_before_completion"
				value="true" />
			<property name="hibernate.max_fetch_depth" value="3" />
			<property name="hibernate.default_batch_fetch_size" value="8" />
			<property name="hibernate.query.substitutions" value="true 1, false 0" />
			<property name="hibernate.order_inserts" value="true"/>
			<property name="hibernate.order_updates" value="true"/>
			<property name="hibernate.jdbc.batch_size" value="500"/>
			<property name="hibernate.connection.driver_class"
				value="com.microsoft.jdbc.sqlserver.SQLServerDriver" />

			<property name="hibernate.integration.envers.enabled" value="${audit.enabled}"/>
			<property name="hibernate.envers.autoRegisterListeners" value="${audit.enabled}"/>
			<property name="org.hibernate.envers.default_schema" value="${default.schema}"/>
			<property name="org.hibernate.envers.store_data_at_delete" value="true"/>
			<property name="org.hibernate.envers.default_catalog" value="${nombre.usuario}"/>
		</properties>

	</persistence-unit>
